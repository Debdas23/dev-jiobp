<section class="key_offerings">
    <div class="container">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <h1 class="block_info--title" data-aos="fade">
                    {{ content.field_cbtitle.0 }}
                </h1>
                <span class="pill_underline" data-aos="fade"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 align-self-center">
                <picture>
                    <img src="{{ content.field_cbupload_image.0 }}"  alt="{{ content.field_cbtitle.0 }}">
                </picture>
            </div>
            <div class="col-md-6 align-self-center">
                <div class="card_li rtl" data-aos="patch-right">
                    <ul>
                        {% if content.field_features %}
                            {% for key, item in content.field_features if key|first != '#' %}
                            <li data-aos="fade">
                                <img src="../themes/custom/jiobp/assets/images/fuels-at-jio-bp/icons/checked.svg" alt="{{ item['#paragraph'].field_cbftext[0].value|raw }}">
                                {{ item['#paragraph'].field_cbftext[0].value|raw }}
                            </li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>