<section class="plan">
    <div class="container -custom">
        <div class="row">
            <div class="col-md-6">
                <h2 class="block_info--title" data-aos="fade">{{ content.field_cbtitle.0 }}</h2>
                <span class="pill_underline -bg_blue" data-aos="fade"></span>
                <p class="block_info--desc" data-aos="fade">
                    {{ content.field_cbtext.0 }}
                </p>
                <div class="card_li" data-aos="patch-left">
                    <ul>
                    {% if content.field_features %}
                        {% for key, item in content.field_features if key|first != '#' %}
                        <li data-aos="fade">
                            <img src="../themes/custom/jiobp/assets/images/fuels-at-jio-bp/icons/checked.svg" alt="" />
                            <h3 class="card_li_title">{{ item['#paragraph'].field_ptitle[0].value|raw }}</h3>
                            <p class="card_li_text">
                                {{ item['#paragraph'].field_cbftext[0].value|raw }}
                            </p>
                        </li>
                        {% endfor %}
                    {% endif %}
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <picture>
                    <img src="{{ content.field_cbupload_image.0 }}"  alt="{{ content.field_cbtitle.0 }}">
                </picture>
            </div>
        </div>
    </div>
</section>