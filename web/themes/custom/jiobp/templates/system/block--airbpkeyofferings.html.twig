<section class="key_offerings">
    <div class="container">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <h2 class="block_info--title" data-aos="fade-up">
                    {{ content.field_cbtitle.0 }}
                </h2>
                <span class="pill_underline" data-aos="fade-up"></span>
                <!-- For Mobile -->
                <p class="block_info--desc d-block d-xl-none d-lg-none d-md-none" data-aos="fade-up">
                    {{ content.field_cbtext.0 }}
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <picture>
                    <img src="{{ content.field_cbupload_image.0 }}"  alt="{{ content.field_cbtext.0 }}">
                </picture>
            </div>
            <div class="col-md-6">
                <p class="block_info--desc d-none d-xl-block d-lg-block d-md-block" data-aos="fade-up">
                    {{ content.field_cbtext.0 }}
                </p>

                <div class="card_li" data-aos="patch-right">
                    <ul>
                        {% if content.field_features %}
                            {% for key, item in content.field_features if key|first != '#' %}
                            <li data-aos="fade">
                                <img src="../themes/custom/jiobp/assets/images/fuels-at-jio-bp/icons/checked.svg" alt="">
                                {{ item['#paragraph'].field_cbftext[0].value|raw }}
                            </li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>