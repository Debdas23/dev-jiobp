<script>
    let currentSlide = 0;
    const slides = document.querySelectorAll(".slide");
    const dots = document.querySelectorAll('.dot');
    let slideInterval;  // Variable to store the interval ID

    // Initialize the slider with the current slide
    const init = (n) => {
        slides.forEach((slide, index) => {
            slide.style.display = "none"; // Hide all slides
            dots.forEach((dot, index) => {
                dot.classList.remove("active"); // Remove active class from all dots
            });
        });
        slides[n].style.display = "block"; // Show the current slide
        dots[n].classList.add("active"); // Add active class to the current dot
    }

    // Event listener for clicking the dots
    dots.forEach((dot, index) => {
        dot.addEventListener("click", () => {
            currentSlide = index; // Set the current slide to the clicked dot's index
            init(currentSlide); // Initialize the slide for the clicked dot
        });
    });

    // Function to show the next slide
    const next = () => {
        currentSlide >= slides.length - 1 ? currentSlide = 0 : currentSlide++;
        init(currentSlide);
    }

    // Function to show the previous slide
    const prev = () => {
        currentSlide <= 0 ? currentSlide = slides.length - 1 : currentSlide--;
        init(currentSlide);
    }

    // Function to start the slide interval
    const startSlideInterval = () => {
        slideInterval = setInterval(next, 5000); // Start the slide interval
    }

    // Function to stop the slide interval
    const stopSlideInterval = () => {
        clearInterval(slideInterval); // Stop the slide interval
    }

    // Initialize the first slide on page load
    document.addEventListener("DOMContentLoaded", () => {
        init(currentSlide);
        startSlideInterval();  // Start the automatic slideshow
    });

    // Pause the slideshow when mouse enters the container
    const slideContainer = document.querySelector('.slide-container');
    slideContainer.addEventListener('mouseover', stopSlideInterval);

    // Resume the slideshow when mouse leaves the container
    slideContainer.addEventListener('mouseout', startSlideInterval);
</script>

